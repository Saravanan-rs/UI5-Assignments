<mvc:View controllerName="assignment8.controller.View1"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns:core="sap.ui.core"
    xmlns="sap.m">
    <Page id="_IDGenPage1" title="Change Text Color">

        <Select id="colorSelect" change="handleChange">
            <core:Item id="_IDGenItem1" key="red" text="Red" />
            <core:Item id="_IDGenItem2" key="orange" text="Orange" />
            <core:Item id="_IDGenItem3" key="yellow" text="Yellow" />
            <core:Item id="_IDGenItem4" key="green" text="Green" />

        </Select>
        <VBox id="_IDGenVBox1" height='3rem'></VBox>
        <Text id="textId" text="This text color will change based on selection" />

    </Page>
</mvc:View>
