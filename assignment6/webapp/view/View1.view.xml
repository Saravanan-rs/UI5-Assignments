<mvc:View controllerName="assignment6.controller.View1"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"
    xmlns:f="sap.f">
    
            <Page id="_IDGenPage1" title="TOYOTA" showHeader="true" enableScrolling="true">
                <headerContent>
                    <HBox id="_IDGenHBox1" alignItems="Center" justifyContent="SpaceBetween">
                        <!-- Side Drawer -->
                        <Button id="_IDGenButton1" icon="sap-icon://menu2" press="onToggleDrawer" />

                        <!-- Title -->
                        <Title id="_IDGenTitle1" text="TOYOTA" textAlign="Center" />

                        <!-- Icons -->
                        <HBox id="_IDGenHBox2">
                            <Button id="_IDGenButton2" icon="sap-icon://search" />
                            <Button id="_IDGenButton3" icon="sap-icon://bell" />
                        </HBox>
                    </HBox>
                </headerContent>
                <content>
                    <!-- Carousel -->
                    <Carousel id="_IDGenCarousel1" width="100%" height="400px" loop="true" showPageIndicator="true">
                        <pages>
                            <Image id="_IDGenImage1" src="https://static.pexels.com/photos/63764/pexels-photo-63764.jpeg" />
                            <Image id="_IDGenImage2" src="image2.jpg" />
                            <Image id="_IDGenImage3" src="image3.jpg" />
                        </pages>
                    </Carousel>

                    <!-- Button for booking -->
                    <Button id="_IDGenButton4" text="Book a Service" press="onBookServicePress" width="100%" />

                    <!-- Cards for booking -->
                    <VBox id="_IDGenVBox1" width="100%">
                        <HBox id="_IDGenHBox3">
                            <VBox id="_IDGenVBox2" width="100%">
                                <Title id="_IDGenTitle2" text="Service 1" />
                                <Text id="_IDGenText1" text="Lorem ipsum dolor sit amet, consectetur adipiscing elit." />
                            </VBox>
                            <Button id="_IDGenButton5" text="Book Now" press="onBookNowPress" />
                        </HBox>
                        <HBox id="_IDGenHBox4">
                            <VBox id="_IDGenVBox3" width="100%">
                                <Title id="_IDGenTitle3" text="Service 2" />
                                <Text id="_IDGenText2" text="Lorem ipsum dolor sit amet, consectetur adipiscing elit." />
                            </VBox>
                            <Button id="_IDGenButton6" text="Book Now" press="onBookNowPress" />
                        </HBox>
                        <HBox id="_IDGenHBox5">
                            <VBox id="_IDGenVBox4" width="100%">
                                <Title id="_IDGenTitle4" text="Service 3" />
                                <Text id="_IDGenText3" text="Lorem ipsum dolor sit amet, consectetur adipiscing elit." />
                            </VBox>
                            <Button id="_IDGenButton7" text="Book Now" press="onBookNowPress" />
                        </HBox>
                    </VBox>
                </content>
                <footer>
                    <!-- Bottom Navigation Bar -->
                    <Bar id="_IDGenBar1">
                     <contentRight>
                            <SegmentedButton id="_IDGenSegmentedButton1">
                                <items>
                                    <SegmentedButtonItem id="_IDGenSegmentedButtonItem1" text="Home" />
                                    <SegmentedButtonItem id="_IDGenSegmentedButtonItem2" text="Vehicle" />
                                    <SegmentedButtonItem id="_IDGenSegmentedButtonItem3" text="Product" />
                                    <SegmentedButtonItem id="_IDGenSegmentedButtonItem4" text="More" />
                                </items>
                            </SegmentedButton>
                        </contentRight>
                    </Bar>
                </footer>
            </Page>
    </mvc:View>
