<mvc:View controllerName="odatapage.controller.Pagination"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Shell>

    <Page id="page" title="{i18n>title}" >
        <FlexBox >
            <Table id="productTable" items="{/Products}">
                <columns>
                    <Column>
                        <Label text="Product Name" />
                    </Column>
                    <Column>
                        <Label text="Unit Price (EUR)" />
                    </Column>
                    
                    <Column>
                        <Label text="Discounted Price (EUR)" />
                    </Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <ObjectIdentifier title="{ProductName}" />
                            <Text text="{UnitPrice}" />
                            
                            <Text text="{parts: [{path: 'UnitPrice'}, {path: 'Discount'}], formatter: '.calculateDiscountedPrice'}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table> 
    </FlexBox>
    </Page>       
</Shell>
</mvc:View>